@using Bulky.Models

@model Category


<div class="card shadow border-0 mt-4">
    <div class="card shadow bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 style="color:black">Delete Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" disabled class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="DisplayOrder" class="p-0"></label>
                    <input asp-for="DisplayOrder" disabled class="form-control" />

                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control"><i class="bi bi-person-dash"></i> Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                            <i class="bi bi-arrow-counterclockwise"></i> Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>


